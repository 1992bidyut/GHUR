<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather.ForecastFragment"
    android:orientation="vertical"
    android:paddingRight="1dp"
    android:paddingLeft="1dp"
    android:paddingTop="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Grap"
        android:textSize="16sp"
        android:padding="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="120dp"
        android:id="@+id/TempGraph" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Temp"
            android:textSize="8sp"
            android:padding="2dp"
            android:background="#ef0202"
            android:layout_margin="1dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Temp"
            android:textSize="8sp"
            android:layout_margin="1dp"
            android:padding="2dp"
            android:background="#2846f2"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity Grap"
        android:textSize="16sp"
        android:padding="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="120dp"
        android:id="@+id/humidityGraph" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudiness Grap"
        android:textSize="16sp"
        android:padding="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryDark"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="120dp"
        android:id="@+id/cloudGraph" />




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/extra_moneyTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Original budget:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/original_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="amount"
                android:layout_weight="4"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Extra money:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/extra_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="amount"
                android:layout_weight="4"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/expenseTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Expence:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/expense_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="#000"
                android:hint="expense case"
                android:inputType="text"
                android:layout_weight="3"/>
            <EditText
                android:id="@+id/expense_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="amount"
                android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Amount:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="amount"
                android:layout_weight="4"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total expense:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/expense_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#000"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="amount"
                android:layout_weight="4"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Extera money"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:background="@drawable/round_button"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/add_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Expence"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:layout_margin="2dp"
            android:background="@drawable/round_button"
            android:textAllCaps="false"
            android:textSize="12sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/expenseList"
        android:layout_gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#c1f483"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    </LinearLayout>